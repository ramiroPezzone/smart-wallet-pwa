<%- include("./fragments/head") %>


<body class="body body-pannel">

  <%- include("./fragments/navbar") %>

  <div class="container-elements-body-pannel">
    <div class="container-saludo-pannel">
      <h3 class="primera-linea-saludo-pannel no-seleccionable">¡Hola <%= user.nickName %>!</h3>
      <h5 class="segunda-linea-saludo-pannel no-seleccionable">¿Que operación querés registrar?
        <!-- Button trigger modal -->
        <button type="button" class="btn-instructivo" data-bs-toggle="modal" data-bs-target="#modalInstructivoPanel">
          ?
        </button>
      </h5>
    </div>

    <%- include("./fragments/modalInstructivoPanel") %>

    <div class="container-add-ingreso-pannel no-seleccionable">
      <a href="/nuevo-ingreso">
        <button class="btnAddIngreso">
          <span>Nuevo ingreso</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="#fff" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
          </svg>
        </button>
      </a>
    </div>

    <div class="container-add-egreso-pannel no-seleccionable">
      <a href="/nuevo-egreso/<%= user._id %>">
        <button class="btnAddEgreso">
          <span>Nuevo egreso</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="#fff" class="bi bi-dash-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7z" />
          </svg>
        </button>
      </a>
    </div>

  </div>


  <%- include("./fragments/scripts") %>
</body>

</html>